<script>
    document.querySelector('#myForm').addEventListener('submit', async function (e) {
        e.preventDefault();
        var form = new FormData($(this)[0]);
        $.ajax({
            url: '/friends',
            method: "POST",
            dataType: 'json',
            data: form,
            processData: false,
            contentType: false,
            success: function(result){window.location.href = "/";},
            error: function(er){console.log(er)}
        });

    })
    

  
</script>